using System;
using System.Collections.Generic;
using System.Text;
using GameBase.BackGround.SimpleTile;
using GameBase.DataStructure;
using Microsoft.Xna.Framework;

namespace GameBase.Graphics.BackGround.SimpleTile.test
{
    public class TestRenderTile : BaseGame
    {
        SimpleTileGround backGround;

        SimpleTileData data;

        protected override void Initialize ()
        {
            base.Initialize();

            data = new SimpleTileData();
            data.width = 3;
            data.height = 3;
            data.texIndexs = new int[]
            {
                0,1,0,
                1,1,3,
                0,1,3
            };
            //data.texIndexs = new int[] { 1 };
            data.texPaths = new string[]
            {
                "dust512.jpg",
                "grass.png",
                "Washedwall.jpg",
                
                
            };

            backGround = new SimpleTileGround( data, new Rectangle( 0, 0, 800, 600 ), new Vector2( 60, 60 ) );
        }

        protected override void GameDraw ( Microsoft.Xna.Framework.GameTime gameTime )
        {
            backGround.Draw( new Rectanglef( 0, 0, 60, 60 ) );
        }
    }
}
