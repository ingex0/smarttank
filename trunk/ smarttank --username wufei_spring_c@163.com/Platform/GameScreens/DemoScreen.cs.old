	/*
     * 已经使游戏规则类继承于IGameScreen，故该文件作废。
     * 
     * */
	
	


    class DemoScreen : IGameScreen
    {
        DemoRule rule;

        public DemoScreen ()
        {
            rule = new DemoRule();
        }

        #region IGameScreen 成员

        public bool Update ( float second )
        {
            rule.Update( second );

            if (InputHandler.IsKeyDown( Microsoft.Xna.Framework.Input.Keys.Escape ))
                return true;

            return false;
        }

        public void Render ()
        {
            rule.Draw();
        }

        #endregion
    }
}
