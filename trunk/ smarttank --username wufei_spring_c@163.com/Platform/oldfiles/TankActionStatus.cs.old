


namespace Platform.GameObjects.Tank
{

    enum TankEngineStatus
    {
        Stop = 0,
        Forward = 1,
        Backward = 2
    }
    enum TankRotatorStatus
    {
        Stop = 0,
        Left = 1,
        Right = 2
    }
    enum TurretStatus
    {
        Stop = 0,
        Left = 1,
        Right = 2
    }

    class TankActionStatus
    {
        public TankActionStatus ()
        {
            EngineStatus = TankEngineStatus.Stop;
            RotatorStatus = TankRotatorStatus.Stop;
            TurretStatus = TurretStatus.Stop;
        }

        public TankEngineStatus EngineStatus;
        public TankRotatorStatus RotatorStatus;
        public TurretStatus TurretStatus;
    }
}