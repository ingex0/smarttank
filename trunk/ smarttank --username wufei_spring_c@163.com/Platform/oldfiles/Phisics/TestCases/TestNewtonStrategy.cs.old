using System;
using System.Collections.Generic;
using System.Text;
using NUnit.Framework;
using Microsoft.Xna.Framework;
namespace Platform.Logic.Phisics.TestCases
{
    [TestFixture]
    public class TestNewtonStrategy
    {
        [TestFixtureSetUp]
        public void init ()
        {
            newton = new NewtonStrategy();
        }
        [Test]
        public void testVelo ()
        {
            NewtonPhisicalStatus status = new NewtonPhisicalStatus();
            NewtonPhisicalStatus next;
            status.Vel = new Vector2( 10f, 10f );
            next = newton.getNextStatus( status, 10 );
            Assert.AreEqual( 0.1, next.Pos.X );
            Assert.AreEqual( 0.1, next.Pos.Y );
        }
        [Test]
        public void testForce ()
        {
            NewtonPhisicalStatus status = new NewtonPhisicalStatus();
            NewtonPhisicalStatus next;
            status.Force = 10f;
            status.Weight = 10;
            status.FrictionFactor = 0.1f;
            status.Rota = 0;
            next = newton.getNextStatus( status, 10 );
            Assert.AreEqual( 0.01, next.Vel.Length() );
            status.Vel = new Vector2( 1, 0 );
            next = newton.getNextStatus( status, 10 );
            Assert.AreEqual( 1.0002, next.Vel.Length() );


        }



        private NewtonStrategy newton;
    }
}
